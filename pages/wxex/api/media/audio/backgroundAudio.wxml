<text>pages/wxex/api/media/audio/backgroundAudio.wxml</text>
<button bindtap="playBackgroundAudio">playBackgroundAudio</button>
<button bindtap="getBackgroundAudioPlayState">getBackgroundAudioPlayState</button>
<button bindtap="pauseBackgroundPlay">pauseBackgroundPlay</button>
<button bindtap="seekTo10sBackgroundPlay">seekTo10sBackgroundPlay</button>
<button bindtap="stopBackgroundPlay">stopBackgroundPlay</button>

<text>audio只在当前的页面里面播放</text>
<audio  src="{{src}}" id="myAudio" controls></audio>
<button type="primary" bindtap="audioPlay">播放</button>
<button type="primary" bindtap="audioPause">暂停</button>
<button type="primary" bindtap="audio14">设置当前播放时间为14秒</button>
<button type="primary" bindtap="audioStart">回到开头</button>