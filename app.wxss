.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

view{
    border-bottom: solid 1px lightseagreen;
    padding:4px;
    font-size: 18px;
}

.cBigButton{
  width: 80%;
  background-color: #1aad19;
  color: red;
  margin-top: 20px;
}

.cBaseView{
  width:100%;
  color: white;
  margin: 10px auto;
  text-align: center;
  background: #1aad19;
  padding: 10px;
  box-sizing: border-box;
}

.cBaseViewHover{
  background-color: #189b16;
}

button{
    width: 80%;
    margin: 8px;
}


